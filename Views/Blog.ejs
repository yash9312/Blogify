<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./Partials/Head") %>
    <title>Blog Details</title>
</head>

<body>
    <%- include("./Partials/Nav") %>

    <!-- Blog Content -->
    <div class="container mt-5 mb-5 p-4 rounded shadow" style="background-color: #f8f9fa;">
        <h1 class="mb-3 fw-bold display-5"><%= blog.title %></h1>

        <!-- Cover Image -->
        <img src="<%= blog.coverImage %>" alt="Blog Cover" class="img-fluid rounded mb-4"
            style="max-height: 400px; object-fit: cover; width: 100%;">

        <!-- Blog Body -->
        <div style="font-size: 1.1rem; line-height: 1.8;">
            <p><%= blog.body %></p>
        </div>

        <!-- Author Info -->
        <div class="container mt-5 d-flex align-items-center gap-2">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" style="border-radius: 50%;">
            <%= blog.createdBy.fullName %>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="container mt-5">
        <h1 class="mb-4">Comments (<%= comment.length %>)</h1>

        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name="content" placeholder="Write your comment here..."
                        required>
                </div>
                <button type="submit" class="btn btn-primary">Comment</button>
            </form>
        <% } %>
    </div>

    <!-- Display Comments -->
    <div class="container mt-4">
        <% comment.forEach(el => { %>
            <div class="mb-3 p-3 border rounded bg-light">
                <div class="d-flex align-items-center mb-2 gap-2">
                    <img src="<%= el.createdBy.profileImageUrl %>" width="50px" style="border-radius: 50%;">
                    <strong><%= el.createdBy.fullName %></strong>
                </div>
                <p class="mb-0"><%= el.content %></p>
            </div>
        <% }) %>
    </div>

    <%- include("./Partials/Scripts") %>
</body>

</html>
